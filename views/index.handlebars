<script>
  $( document ).ready(function() {
    $("#registerForm").hide();
  });
  $("#registerBtn").click(function (){
    $("#loginForm").hide();
    $("#registerBtn").hide();

    $("#registerForm").show(); 
  });
  $("#completeRegisterBtn").click(function (){
    $("#loginForm").show();
    $("#registerBtn").show();
    $("#registerForm").hide(); 
  });
  $("#cancelRegistrationBtn").click(function (){
    location.reload();
  });
</script>

